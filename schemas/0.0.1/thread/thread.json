{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Thread Schema",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "integer",
      "enum": [1]
    },
    "id": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{24}$",
      "minLength": 24,
      "maxLength": 24
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "users": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{24}$",
            "minLength": 24,
            "maxLength": 24
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "joined_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "name", "joined_at"],
        "additionalProperties": false
      }
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-fA-F0-9]{24}$",
        "minLength": 24,
        "maxLength": 24
      }
    },
    "invites": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{24}$",
            "minLength": 24,
            "maxLength": 24
          },
          "user_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "status": {
            "type": "string",
            "enum": ["pending", "accepted", "declined", "cancelled"]
          },
          "invited_by": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{24}$",
            "minLength": 24,
            "maxLength": 24
          },
          "invited_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["user_id", "user_name", "status", "invited_by", "invited_at"],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "schema_version",
    "id",
    "created_at",
    "updated_at",
    "users",
    "messages",
    "invites"
  ],
  "additionalProperties": false
}
