{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sample Schema",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "integer",
      "enum": [1]
    },
    "id": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{24}$",
      "minLength": 24,
      "maxLength": 24
    },
    "sample_pack_id": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{24}$",
      "minLength": 24,
      "maxLength": 24
    },
    "author_id": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{24}$",
      "minLength": 24,
      "maxLength": 24
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "url": {
      "type": "string",
      "format": "uri",
      "maxLength": 512
    },
    "duration": {
      "type": "number",
      "minimum": 0
    },
    "file_size": {
      "type": "integer",
      "minimum": 0
    },
    "format": {
      "type": "string",
      "enum": ["wav", "mp3"]
    },
    "sample_rate": {
      "type": "integer",
      "minimum": 1,
      "maximum": 48000
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "object",
      "properties": {
        "loaded": {
          "type": "boolean"
        },
        "file_path": {
          "type": "string",
          "maxLength": 512
        },
        "sample_id": {
          "type": "string",
          "pattern": "^[a-fA-F0-9]{24}$",
          "minLength": 24,
          "maxLength": 24
        },
        "name": {
          "type": "string",
          "maxLength": 128
        },
        "settings": {
          "type": "object",
          "properties": {
            "volume": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "pitch": {
              "type": "number",
              "minimum": 0.25,
              "maximum": 4
            }
          },
          "required": ["volume", "pitch"],
          "additionalProperties": false
        }
      },
      "required": ["loaded", "file_path", "sample_id", "name", "settings"],
      "additionalProperties": false
    }
  },
  "required": [
    "schema_version",
    "id",
    "author_id",
    "duration",
    "created_at",
    "url"
  ],
  "additionalProperties": false
}


