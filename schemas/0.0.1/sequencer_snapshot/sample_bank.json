{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Sample Bank Snapshot Schema",
    "type": "object",
    "properties": {
        "max_slots": {
            "type": "integer",
            "minimum": 1,
            "maximum": 26
        },
        "samples": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "loaded": {
                        "type": "boolean"
                    },
                    "settings": {
                        "type": "object",
                        "properties": {
                            "volume": {
                                "type": "number",
                                "minimum": 0.0,
                                "maximum": 1.0
                            },
                            "pitch": {
                                "type": "number",
                                "minimum": 0.25,
                                "maximum": 4.0
                            }
                        },
                        "required": ["volume", "pitch"],
                        "additionalProperties": true
                    },
                    "sample_id": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 128
                    },
                    "file_path": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 512
                    },
                    "display_name": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 128
                    }
                },
                "required": ["loaded", "settings"],
                "additionalProperties": false
            },
            "minItems": 26,
            "maxItems": 26
        }
    },
    "required": ["max_slots", "samples"],
    "additionalProperties": false
}
