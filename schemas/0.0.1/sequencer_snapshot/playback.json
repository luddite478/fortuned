{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Playback Snapshot Schema",
    "type": "object",
    "properties": {
        "bpm": {
            "type": "integer",
            "minimum": 60,
            "maximum": 300
        },
        "region_start": {
            "type": "integer",
            "minimum": 0,
            "maximum": 2048
        },
        "region_end": {
            "type": "integer",
            "minimum": 0,
            "maximum": 2048
        },
        "song_mode": {
            "type": "integer",
            "enum": [0, 1]
        },
        "current_section": {
            "type": "integer",
            "minimum": 0,
            "maximum": 63
        },
        "current_section_loop": {
            "type": "integer",
            "minimum": 0
        },
        "sections_loops_num": {
            "type": "array",
            "items": {
                "type": "integer",
                "minimum": 1,
                "maximum": 1024
            },
            "minItems": 1,
            "maxItems": 64
        }
    },
    "required": ["bpm", "region_start", "region_end", "song_mode", "current_section", "current_section_loop", "sections_loops_num"],
    "additionalProperties": false
}
