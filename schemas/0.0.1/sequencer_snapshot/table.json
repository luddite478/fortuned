{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Table Snapshot Schema",
    "type": "object",
    "properties": {
        "sections_count": {
            "type": "integer",
            "minimum": 0,
            "maximum": 64
        },
        "sections": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "start_step": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "num_steps": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 2048
                    }
                },
                "required": ["start_step", "num_steps"],
                "additionalProperties": false
            },
            "minItems": 1
        },
        "layers": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 16
                },
                "minItems": 4,
                "maxItems": 4
            }
        },
        "table_cells": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "sample_slot": {
                            "type": "integer",
                            "minimum": -1,
                            "maximum": 25
                        },
                        "settings": {
                            "type": "object",
                            "properties": {
                                "volume": {
                                    "type": "number",
                                    "minimum": 0.0,
                                    "maximum": 1.0
                                },
                                "pitch": {
                                    "type": "number",
                                    "minimum": 0.25,
                                    "maximum": 4.0
                                }
                            },
                            "required": ["volume", "pitch"],
                            "additionalProperties": true
                        }
                    },
                    "required": ["sample_slot", "settings"],
                    "additionalProperties": false
                },
                "minItems": 16,
                "maxItems": 16
            }
        }
    },
    "required": ["sections_count", "sections", "layers", "table_cells"],
    "additionalProperties": false
}
